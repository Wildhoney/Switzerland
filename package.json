{
  "name": "@wildhoney/switzerland",
  "description": "Switzerland takes a functional approach to web components using Preact with shadow DOM for style encapsulation, custom elements for interoperability and server-side rendering for universality.",
  "version": "6.0.0",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "build": "nx run-many --target=build",
    "start": "nx run-many --target=start",
    "format": "nx run-many --target=format",
    "unit": "nx run-many --target=unit",
    "lint": "nx run-many --target=lint",
    "typecheck": "nx run-many --target=typecheck",
    "test": "yarn lint && yarn typecheck && yarn unit"
  },
  "devDependencies": {
    "@types/jest": "29.4.0",
    "@typescript-eslint/eslint-plugin": "5.54.1",
    "@typescript-eslint/parser": "5.54.1",
    "eslint": "8.36.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.5.0",
    "nx": "15.8.6",
    "prettier": "2.8.4",
    "terser": "5.16.6",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  }
}
